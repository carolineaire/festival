{% extends 'base.html.twig' %}

{% block title %}Festival La Paviotek{% endblock %}

{% block body %}

    <div class="container-fluid mt-5 mb-5">
        <div class="container">
        <h1>Festival La Paviotek, un festival convivial organisé par le DJ Chatxon D'Amour, du 9 au 11 mai 2025 !</h1>
            <div class="row">
            <h2 class="articles mb-5">Suivez nos dernières actualités</h2>
                {% for posts in posts %}
                    <div class="col-md-7 mt-1">
                        <div class="col-md-12 mb-4 zxtitlerubrik">
                            {{ posts.rubrik.name|capitalize }}
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <div class="row">
                                    <a href="{{path('show', {'slug':posts.slug, id: posts.id})}}" class="col-md-12 mb-1 zxtitleone">
                                        {{ posts.title }}
                                    </a>
                                    <a href="{{path('show', {'slug':posts.slug, id: posts.id})}}" class="col-md-12 mb-3 zxabstract">
                                        {{ posts.abstract|slice(0,255)}}{% if posts.abstract|length > 255 %}...{% endif %}
                                    </a>
                                    <div class="col-md-12 mb-1 zxdate">
                                        Mis en ligne le : {{ posts.createdAt|date('d/m/Y') }}
                                    </div>
                                    <div class="col-md-12 mb-1 zxuser">
                                        <img class="roundedImage" src="{{asset('divers/avatars/' ~ posts.user.avatar)}}" alt="avatar">
                                            &emsp;{{posts.user.firstname|capitalize}} {{posts.user.lastname|upper}} - {{posts.user.city|capitalize}}
                                    </div>
                                </div>
                            </div>
                            <a href="{{path('show', {'slug':posts.slug, id: posts.id})}}" class="col-md-7 zximg">
                                <img class="img-fluid" src="{{asset('divers/images/' ~ posts.image1)}}" alt="Une image">
                            </a>
                        </div>
                    </div>
                {% endfor %}
                <div class="col-md-5 mt-5">
                <br>
                    {% for posts2 in posts2 %}
                        <div class="row">
                            <a href="{{path('show', {'slug':posts2.slug, id: posts2.id})}}" class="col-md-3 mb-2 mt-1 yximg">
                                <img class="img-fluid" src="{{asset('divers/images/' ~ posts2.image1)}}" alt="L'image là">
                            </a>
                            <div class="col-md-9 mb-2">
                                <div class="row">
                                    <a href="{{path('show', {'slug':posts2.slug, id: posts2.id})}}" class="col-md-12 zxtitle">
                                        {{ posts2.title }}
                                    </a>
                                    <div class="col-md-12 zxuser">
                                        <img class="roundedImage" src="{{asset('divers/avatars/' ~ posts2.user.avatar)}}" alt="avatar">
                                        &emsp;{{posts2.user.firstname|capitalize}} {{posts2.user.lastname|upper}} - {{posts2.user.city|capitalize}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid mt-5 mb-5">
        <div class="container">
            <div class="row">
                <h2 class="articles mb-5">Notre programmation</h2>
                {% for randomProg in randomProg %}
                <div class="col-md-3 offset-md-1">
                    <div class="artist-card">
                        <img src="{{ asset('path/to/artist/image/' ~ randomProg.avatar) }}" alt="{{ randomProg.artist }}" class="img-fluid">
                        {# <h3>{{ randomProg.artist }}</h3>
                        <p>{{ randomProg.abstract|slice(0, 100) }}{% if randomProg.abstract|length > 100 %}...{% endif %}</p> #}
                    </div>
                </div>
            {% endfor %}
            </div> 
            {# Ajouter un mot "Voir toute la programmation" quand on survol les artistes #}
            {# Ajouter lien vers la playlist spotify #}
        </div>
    </div>

    <div class="container-fluid mt-5 mb-5">
        <div class="container">
            <div class="row">
                <h2 class="articles mb-5">Notre boutique en ligne</h2>
                <div class="col-md-3 offset-md-1">Merch1</div>
                <div class="col-md-3 offset-md-1">MErch2</div>
                <div class="col-md-3 offset-md-1">Merch3</div>
            </div> 
            {# Ajouter un mot "Acceder à la boutique en ligne" quand on survol les articles #}
        </div>
    </div>

    <div class="container-fluid mt-5 mb-5">
        <div class="container">
            <div class="row">
                <h2 class="articles mb-5">La Paviotek recherche des benevoles</h2>
                <div class="col-md-3 offset-md-1">Merch1</div>
                <div class="col-md-3 offset-md-1">MErch2</div>
                <div class="col-md-3 offset-md-1">Merch3</div>
            </div> 
            {# Ajouter un lien vers formulaire d'inscription bénévole #}
        </div>
    </div>


{% endblock %}
